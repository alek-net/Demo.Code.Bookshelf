@model Bookshelf.Models.BookLoanViewModel

@{
    ViewData["Title"] = "Loan";
}

<div id="loan" class="col-md-12">
	<div class="panel panel-info">
		<div class="panel-heading">
			<div class="panel-title">Loan Book</div>				
		</div>
		<div class="panel-body">
			<div class="mainbox col-md-6">
				<p>
					Book: <strong>@Model.Book.Title</strong>					
				</p>
				<p>
					Author: <strong>@Model.Book.Author</strong>					
				</p>
				<p>
					ISBN: @Model.Book.ISBN
				</p>
				<form asp-action="Loan">
					<div asp-validation-summary="ModelOnly" class="form-group text-danger"></div>
					<input type="hidden" asp-for="Book.Id" />					
					<div class="form-group">
						<label asp-for="Book.LoanedTo" class="control-label"></label>
						<select asp-for="Book.LoanedTo" class="form-control" asp-items="Model.Users"></select>
						<span asp-validation-for="Book.LoanedTo" class="dropdown"></span>
					</div>
					<div class="form-group">
						<input type="submit" value="Save" class="btn btn-default btn-primary" />
					</div>
				</form>
			</div>
		</div>

		<div>
			<a asp-action="Index">Back to List</a>
		</div>
	</div>
</div>


			
